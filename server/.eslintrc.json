{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": [
      "error", 
      "spaces"
    ],
    "linebreak-style": [
      "error", 
      "windows"
    ],
    "quotes": [
      "error", 
      "single"
    ],
    "semi": [
      "error", 
      "always"
    ]
  }
}
